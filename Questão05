import java.util.Scanner;

public class Questao 5 {
    public static void main(String[] args) {
        System.out.println("Informe uma palavra, para que ela seja invertida");
        Scanner teclado = new Scanner(System.in);
        String string = teclado.next();
        String inversao ="";
        for (int i = string.length()-1; i>=0; i--){
            inversao = inversao + Character.toString(string.charAt(i));
            System.out.println(inversao);
        }
    }

}
